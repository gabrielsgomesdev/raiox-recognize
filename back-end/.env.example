# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_HOST=localhosts
DB_PORT=5432
DB_NAME=raiox_recognize
DB_USER=raiox_user
DB_PASSWORD=raiox_password_dev

# Database Connection Pool (optional)
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# OPENAI API
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a secure random string for JWT_SECRET
# Example: openssl rand -base64 64
JWT_SECRET=your_very_secure_secret_key_here_min_32_characters
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# ============================================
# CORS
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# ============================================
# FILE STORAGE
# ============================================
# Directory for uploaded images
UPLOAD_DIR=./imagens-inbox
PROCESSED_DIR=./imagens-processadas

# File watcher settings
WATCH_DIR=./imagens-inbox

# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# ============================================
# SESSION CLEANUP
# ============================================
# How often to cleanup expired sessions (in milliseconds)
# Default: 1 hour = 3600000ms
SESSION_CLEANUP_INTERVAL=3600000

# ============================================
# RATE LIMITING (optional)
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m
